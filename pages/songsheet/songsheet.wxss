/* ------------背景图片------------ */

.bg {
    width: 160%;
    height: 100%;
    position: fixed;
    left: 50%;
    transform: translateX(-50%);
    opacity: 0.8;
    z-index: -1;
    filter: blur(40rpx);
}

/* ------------歌单简介------------ */

.header {
    height: 300rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding: 0rpx 20rpx;
    /* border: 2px solid red; */
    /* background-color: blue; */
}

.sheet-img {
    width: 35%;
    display: flex;
    align-items: center;
    /* border: 2px solid orange; */
    /* background-color: orange; */
}

.sheet-img>image {
    width: 230rpx;
    height: 230rpx;
    border-radius: 20rpx;
    /* background-color: black; */
}

.sheet-text {
    display: flex;
    flex-direction: column;
    height: 230rpx;
    padding-left: 20rpx;
    /* background-color: blueviolet; */
}

.sheet-text .sheet-name {
    width: 100%;
    font-weight: bold;
    margin: 5rpx 0rpx;
    /* background-color:aqua; */
}

.sheet-text .author {
    display: flex;
    align-items: center;
    height: 50rpx;
    margin: 10rpx 0rpx;
    /* background-color: greenyellow; */
}

.sheet-text .author>image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.sheet-text .author>text {
    font-size: 28rpx;
    color: #666;
}

.sheet-text .sheet-dec {
    font-size: 25rpx;
    display: -webkit-box; 
    overflow: scroll;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    /* background-color: green; */
}

/* ------------歌单乐曲------------ */

.title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 60rpx;
    text-indent: 20rpx;
    background-color: gainsboro;
}

.musiclist {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.music-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 20rpx;
    border-top: 1rpx solid rgb(236, 236, 236);
    border-bottom: 1rpx solid rgb(236, 236, 236);
    background-color: #f7f7f7;
}

.textbox {
    display: flex;
    flex-direction: column;
    width: 85%;
}

.play-img {
    width: 80rpx;
    height: 100%;
    display: flex;
}

.play-img>image {
    width: 60rpx;
    height: 60rpx;
    margin: auto;
}

.music-item .textbox .mname {
    width: 600rpx;
    font-size: 33rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.music-item .textbox .msinger {
    font-size: 25rpx;
    color: #777;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

