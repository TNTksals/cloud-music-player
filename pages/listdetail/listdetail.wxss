/* ------------榜单简介------------ */

.header {
    height: 300rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding: 0rpx 20rpx;
    background-color: #f7f7f7;
}

.list-img {
    width: 35%;
    display: flex;
    justify-content: center;
    align-items: center;
    /* border: 2px solid orange; */
    /* background-color: orange; */
}

.list-img>image {
    width: 230rpx;
    height: 230rpx;
    border-radius: 20rpx;
    /* background-color: black; */
}

.list-text {
    display: flex;
    flex-direction: column;
    height: 230rpx;
    display: flex;
    padding: 0 20rpx;
    /* background-color: blueviolet; */
}

.list-text .list-name {
    font-size: 35rpx;
    font-weight: bold;
    margin: 10rpx 0rpx;
    /* background-color:aqua; */
}

.list-text .author {
    display: flex;
    align-items: center;
    height: 50rpx;
    margin: 10rpx 0rpx;
    /* background-color: greenyellow; */
}

.list-text .author>image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
    margin-right: 10rpx;
}

.list-text .author>text {
    font-size: 28rpx;
    margin: 0rpx 10rpx;
}

.list-text .list-dec {
    font-size: 25rpx;
    color: #666;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    /* background-color: green; */
}

/* ------------歌单乐曲------------ */

.title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 60rpx;
    text-indent: 20rpx;
    background-color: gainsboro;
}

.musiclist {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.music-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 20rpx;
    border-top: 1rpx solid rgb(236, 236, 236);
    border-bottom: 1rpx solid rgb(236, 236, 236);
    background-color: #f7f7f7;
}

.textbox {
    display: flex;
    flex-direction: column;
    /* flex: 1; */
    width: 85%;
}

.play-img {
    width: 80rpx;
    height: 100%;
    display: flex;
}

.play-img>image {
    width: 60rpx;
    height: 60rpx;
    margin: auto;
}

.music-item .textbox .mname {
    width: 600rpx;
    font-size: 33rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.music-item .textbox .msinger {
    font-size: 25rpx;
    color: #777;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

