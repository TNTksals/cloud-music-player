/* --------------------------- */

page {
    padding: 10rpx;
    box-sizing: border-box;
}

/* ------------轮播图区域------------ */

.banner {
    height: 320rpx;
    background-color: rgb(240, 240, 240);
    border-radius: 15rpx;
    /* background-color: aquamarine; */
}

.banner .banner-item {
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
    /* background-color: red; */
}

.banner-item>image {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
}

/* ------------热门歌手区域------------ */

::-webkit-scrollbar {
    display: none;
}

.title {
    position: relative;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    line-height: 80rpx;
    margin-top: 30rpx;
    text-indent: 20rpx;
    /* background-color: red; */
}

.hot-list {
    display: flex;
    flex-direction: row;
    align-items: center;
    overflow-x: scroll;
    width: 100%;
    height: 250rpx;
    /* background-color: yellowgreen; */
}

.hot-list .hot-item {
    width: 200rpx;
    text-align: center;
    margin: 0rpx 20rpx;
}

.hot-list .hot-item>image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 15rpx;
}

.hot-list .hot-item>text {
    font-size: 28rpx;
    color: #4d4d4d;
}

/* ------------推荐歌单------------ */

.sheet-list {
    height: 600rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    /* background-color: red; */
}

.sheet-list .sheet-item {
    width: 33.33%;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    /* background-color: black; */
}

.sheet-list .sheet-item>image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 15rpx;
}

.sheet-list .sheet-item>text {
    width: 200rpx;
    height: 70rpx;
    font-size: 26rpx;
    color: #4d4d4d;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    /* background-color: pink; */
}

/* ------------最新音乐------------ */

.music-list {
    display: flex;
    flex-direction: column;
    width: 100%;
    /* border: 2px solid greenyellow; */
}

.music-list .music-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx 20rpx;
    border-top: 1rpx solid rgb(236, 236, 236);
    border-bottom: 1rpx solid rgb(236, 236, 236);
}

.music-list .music-item .textbox {
    display: flex;
    flex-direction: column;
    width: 85%;
    /* background-color: black; */
}

.music-list .music-item .play-img {
    width: 70rpx;
    height: 100%;
    display: flex;
    /* background-color: brown; */
}

.music-item .play-img>image {
    width: 50rpx;
    height: 50rpx;
    margin: auto;
}

.music-item .textbox .mname {
    width: 600rpx;
    font-size: 33rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.music-item .textbox .msinger {
    font-size: 25rpx;
    color: #777;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

