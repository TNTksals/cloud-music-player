/* ------------头部搜索框------------ */

.header {
    position: sticky;
    top: 0;
    z-index: 999;
    display: flex;
    justify-content: center;
    align-items: center;
    /* background-color: blue; */
}

.search {
    width: 95%;
    margin: 20rpx;
    border: 1rpx solid #ddd;
    border-radius: 50rpx;
    background-color: #f7f7f7;
}

.search .search-icon {
    margin: 10px 10px;
    position: absolute;
    /* background-color: black; */
}

.search .search-input {
    margin-left: 35px;
    height: 40px;
    width: 85%;
}

/* -------------标题------------ */

.title {
    font-size: 35rpx;
    font-weight: bold;
    color: #333;
    line-height: 80rpx;
    margin-top: 30rpx;
    text-indent: 30rpx;
    /* background-color: red; */
}

/* -------------云音乐特色榜------------ */

.top-list {
    display: flex;
    flex-direction: column;
    padding: 10rpx 10rpx;
    border: 2rpx solid #efefef;
    /* background-color: red; */
}

.top-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 300rpx;
    margin: 5rpx 0rpx;
    border-radius: 8rpx;
    /* background-color: blueviolet; */
}

.top-item .item-img {
    position: relative;
    height: 250rpx;
    margin: 0rpx 20rpx;
    /* background-color: orange; */
}

.top-item .item-img>image {
    display: block;
    width: 250rpx;
    height: 250rpx;
    /* background-color: green; */
}

.top-item .item-img>text {
    position: absolute;
    bottom: 10rpx;
    left: 20rpx;
    font-size: 25rpx;
    color: #ddd;
}

.top-item .item-song {
    height: 250rpx;
    width: 400rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    /* background-color: aqua; */
}

.top-item .item-song>text {
    font-size: 30rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* -------------全球媒体榜------------ */

.global-list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    /* background-color: red; */
}

.global-item {
    width: 33.33%;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    box-sizing: border-box;
    /* background-color: black; */
}

.global-item>image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 15rpx;
}

.global-item>text {
    width: 200rpx;
    height: 70rpx;
    font-size: 26rpx;
    color: #4d4d4d;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}


